# Ansible Playbook
alias ap="ansible-playbook"
alias apl="ansible-playbook --list-tasks"

# Ansible Docs
alias ad="ansible-doc"
alias adgrep="ansible-doc -l | grep"

# Ansible Vault
alias av="ansible-vault"
alias avc="ansible-vault create"
alias avv="ansible-vault view"
alias avd="ansible-vault decrypt"
alias ave="ansible-vault encrypt"
alias avedit="ansible-vault edit"

# Ansible Console
alias aterm="ansible-console"

# Ansible Config
alias aconf="ansible-config"

# Ansible Inventory
alias ai="ansible-inventory"
alias ailist="ansible-inventory --list"
alias aihost="ansible-inventory --host"
